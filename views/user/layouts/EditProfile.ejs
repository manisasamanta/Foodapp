<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Document</title>
</head>
<%- include('../partials/header')%>

<section class="bg-light py-3 py-md-5 d-flex align-items-center" style="height: 80vh;">
    <div class="container">
      <div class="row justify-content-center">
        <div class="col-12 col-sm-10 col-md-8 col-lg-6 col-xl-5 col-xxl-4">
          <div class="card border border-light-subtle rounded-3 shadow-sm">
            <div class="card-body p-3 p-md-4 p-xl-5">
              <div class="text-center mb-3">
                
                
              </div>
              <h2 class="fs-6 fw-normal text-center text-secondary mb-4">Update Profile</h2>
              <form action="/update/profile" method="post">
                <div class="row gy-2 overflow-hidden">
                  <div class="col-12 pt-3">
                    <div class="mb-3">
                      <input type="text" class="form-control" name="name" id="name" value="<%=data.name%>" placeholder="enter name" required>
                      <label for="name" class="form-label">Name</label>
                    </div>
                  </div>
                  <div class="col-12">
                    <div class="mb-3">
                      <input type="text" class="form-control" name="phone" id="phone" value="<%= data.phone%>" placeholder="enter phone number" required>
                      <label for="phone" class="form-label">Phone </label>
                    </div>
                  </div>
                  <div class="col-12">
                    <div class="d-grid my-3">
                     <a href=""><button class="btn btn-primary btn-lg w-100" type="submit">Submit</button></a> 
                    </div>
                  </div>
                 
                </div>
              </form>
            </div>
          </div>
        </div>
      </div>
    </div>
  </section>
  <!-- hero close -->
</div>
  <!-- footer section -->

<%-include('../partials/footer')%>
<!-- footer section -->


